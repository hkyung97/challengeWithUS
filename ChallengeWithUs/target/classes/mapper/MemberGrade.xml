<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.home.dao.MemberGradeDAO">
    <!-- 회원 등급 조회 -->
    <select id="getMemberGrade" parameterType="string" resultType="com.smart.home.dto.MemberGradeDTO">
        SELECT * 
        FROM UserGrade
        WHERE MemberId = #{memberId}
    </select>

    <!-- 회원 등급 업데이트 -->
	<update id="updateMemberGrade" parameterType="string">
	    UPDATE Members
	    SET MemberGradeName = CASE
	        WHEN (SELECT COUNT(*) FROM MemberAchievement WHERE MemberId = #{memberId} AND AchievementRate >= 85) >= 10 THEN 'Leader'
	        ELSE 'Basic'
	        END
	    WHERE MemberId = #{memberId}
	</update>

    <!-- 회원 등급 삭제 -->
    <delete id="deleteMemberGrade" parameterType="string">
        DELETE 
        FROM UserGrade
        WHERE MemberId = #{memberId}
    </delete>
</mapper>
  